<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MRDesktopAndroidClient" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryVariant">@android:color/holo_blue_light</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>
    
    <!-- Full screen theme for main activity -->
    <style name="Theme.MRDesktopAndroidClient.FullScreen" parent="Theme.MRDesktopAndroidClient">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>